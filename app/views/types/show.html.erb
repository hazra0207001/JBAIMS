<div class ="card mt-5 mb-4">

  <div class= "card-body">
    <h2 class = "text-center"> Type Details </h2>
  </div>
</div>

<table class ="table table-bordered">
  <thead>
  <tr>
    <th> Type Name</th>
    <th> Actions </th>
  </tr>
  </thead>
  <tbody>

    <tr>
      <td><%= @type.name%> </td>
      <td>
        <%#= link_to "show", product_path(@product.id) %>
        <%= link_to "Edit",edit_type_path(@type.id), class: "btn btn-outline-primary rounded-0"%>
         <%= link_to "Delete",type_path(@type.id), class: "btn btn-outline-danger rounded-0", method: :delete, data: {confirm: 'Are you sure to Delete?'} %>
      </td>
    </tr>

  </tbody>
</table>
<% if @type.products.present?%>
  <div class= "card-body">
    <h2 class = "text-center"> Products Details </h2>
  </div>
</div>

<table class ="table table-bordered">
  <thead>
    <tr>
        <th> Name</th>
        <th> Serial No</th>
        <th> Unit Price</th>
        <th> Unit </th>
        <th> Total Price</th>
        <th> Image </th>
        <th> Actions</th>
    </tr>
  </thead>
  <% @products =@type.products%>
  <tbody>
    <% @products.each do |product|%>
        <tr>
            <td><%= product.name%> </td>
            <td><%= product.serial_no%> </td>
            <td><%= product.price%> </td>
            <td><%= product.unit%> </td>
            <td><%= product.total_price%> </td>
            <td>
                <% if product.images.attached? %>
                    <% product.images.each do |image| %>
                        <%= image_tag image, size: '50x50'%>
                    <% end %>
                    <% else %>
                    <p>No images attached.</p>
                <% end %>
            </td>
            <td>
                <%= link_to "show", product_path(product.id), class: "btn btn-outline-info rounded-0" %>
                <%= link_to "Edit",edit_product_path(product.id), class: "btn btn-outline-primary rounded-0"%>
                <%= link_to "Delete",product_path(product.id), class: "btn btn-outline-danger rounded-0", method: :delete, data: {confirm: 'Are you sure to Delete?'} %>
            </td>
        </tr>
    <% end%>

  </tbody>
</table>
<% end%>

