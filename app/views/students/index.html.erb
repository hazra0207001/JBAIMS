<div class ="card mt-5 mb-4">
  <div class= "card-body">
    <h2 class = "text-center"> Listing Students </h2>
  </div>
</div>

<% if flash[:notice].present? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>
<table class ="table table-bordered">
  <thead>
  <tr>
    <th> Name</th>

    <th>Roll No</th>
    <th>Class</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @students.each do|student|  %>
    <tr>
      <td><%= student.name%> </td>

      <td><%= student.roll_no%></td>
      <td><%= student.class_name%></td>
      <td><%= link_to "Edit",edit_student_path(student.id), class:"btn btn-primary" %></td>
      <td><%=link_to "Show", student_path(student.id), class:"btn btn-info"%></td>
      <td><%= link_to"Delete", student_path(student.id), class:"btn btn-danger", method: :delete, data:{confirm: "Are you Sure to Delete?"} %></td>
    </tr>
  <% end%>
  </tbody>
</table>